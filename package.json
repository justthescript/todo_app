{
  "name": "todo-app-desktop",
  "version": "1.0.0",
  "description": "Local desktop todo app with context-based task management",
  "main": "main.js",
  "scripts": {
    "start": "electron . --no-sandbox",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["todo", "task-management", "productivity", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.todoapp.desktop",
    "productName": "Todo App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "styles.css",
      "script.js",
      "main.js"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  }
}
